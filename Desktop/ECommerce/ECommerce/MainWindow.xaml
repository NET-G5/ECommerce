<Window
    x:Class="ECommerce.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ECommerce"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:ECommerce.Views.Views"
    Title="Ecommerce"
    WindowState="Maximized"
    mc:Ignorable="d">
    <Grid>
        <materialDesign:Card >
            <TabControl
                materialDesign:ColorZoneAssist.Mode="Dark"
                materialDesign:ElevationAssist.Elevation="Dp0"
                Style="{StaticResource MaterialDesignNavigationRailTabControl}"
                TabStripPlacement="Top" >
                <TabItem  Width="320">
                    <TabItem.Header >
                        <StackPanel Width="80" Height="auto">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontWeight="Bold"
                                Text="Home Page" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem >
                <TabItem Width="320" >
                    <TabItem.Header>
                        <StackPanel Width="auto" Height="auto">
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontWeight="Bold"
                                Text="Categories" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
                <TabItem Width="320">
                    <TabItem.Header>
                        <StackPanel Width="auto" Height="auto">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Center"
                                Kind="Heart" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem >
                <TabItem  Width="320">
                    <views:AuthorizationView/>
                    <TabItem.Header>
                        <StackPanel Width="auto" Height="auto">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Center"
                                Kind="AccountCircle" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
                <TabItem Width="320" >
                    <TabItem.Header>
                        <StackPanel Width="auto" Height="auto">
                            <materialDesign:PackIcon
                                Width="30"
                                Height="30"
                                HorizontalAlignment="Center"
                                Kind="Cart" />
                        </StackPanel>
                    </TabItem.Header>
                </TabItem>
            </TabControl>
        </materialDesign:Card>
    </Grid>
</Window>
