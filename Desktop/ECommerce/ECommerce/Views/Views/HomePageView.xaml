            Grid.Row="0"
            Grid.Column="2"
            Width="256"
            Height="60"
            Margin="0,20"
            Padding="10"
            materialDesign:HintAssist.Hint="Search..."
            AcceptsReturn="True"
            FontSize="22"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            TextWrapping="Wrap" />
