
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Ecommerce</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Ecommerce.styles.css" asp-append-version="true" />
    <link href="https://cdn.syncfusion.com/ej2/20.1.55/bootstrap5.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&display=swap" rel="stylesheet">
    <script src="https://cdn.syncfusion.com/ej2/26.2.4/dist/ej2.min.js"></script>

</head>
<body>
    <header>
        <div class="header-main">
            <div class="logo d-flex">
                <a asp-controller="Products"  asp-action="Index"> 
                    <img src="~/css/e-commerce.logo1.png" alt="Ecommerce" />
                    <span   >Ecommerce</span>
                </a>
            </div>
            
            <form class="search-bar">
                <input type="text" name="searchText" asp-controller="Products" asp-action="Index" placeholder="Search products and categories...">
                    <button><i class="fas fa-search"></i></button>
                </input>
            </form>
            <div class="header-icons">
                @if (ViewBag.Name is null)
                {
                    <a asp-controller="Customer" asp-action="Login"><i class="fas fa-user"></i>LogIn</a>
                }
                else
                {
                    <a asp-controller="Customer" asp-action="Index"><i class="fas fa-user"></i> @ViewBag.Name</a>
                }
                <button asp-controller="MyOrders" asp-action="Index"> My orders</button>
                <button><i class="fas fa-heart"></i> Favourite</button>
                <button><i class="fas fa-shopping-cart"></i> Basket</button>
            </div>
        </div>
        <section class="categories d-flex justify-content-between">
            <div class="container" >
                <ul>
                    <li><a href="https://localhost:7194/Products?searchText=electronics">Electronics</a></li>
                    <li><a href="https://localhost:7194/Products?searchText=books">Books</a></li>
                    <li><a href="https://localhost:7194/Products?searchText=household+appliance">Household appliances</a></li>
                    <li><a href="https://localhost:7194/Products?searchText=office">Office</a></li>
                    <li><a href="https://localhost:7194/Products?searchText=clothing">Clothing</a></li>
                    <li><a href="https://localhost:7194/Products?searchText=shoes">Shoes</a></li>
                    <li><a href="https://localhost:7194/Products?searchText=health">Health</a></li>
                    <li><a href="https://localhost:7194/Products?searchText=automotive+goods">Automotive goods</a></li>
                    <li><a href="https://localhost:7194/Products?searchText=Sports+and+recreation">Sports and recreation</a></li>
                    <li><a href="https://localhost:7194/Products?searchText=Beauty+and+care">Beauty and care</a></li>
                    <li><a asp-controller="Categories" asp-action="Index">More</a></li>
                </ul>
            </div>
        </section>
    </header>

    <main role="main" class="pb-3">
        @RenderBody()
    </main>


    <footer class="footer bg-dark text-white py-4">
        <div class="container">
            <div class="row">
                <!-- Company Info -->
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase">Ecommerce</h5>
                    <p>Providing quality products at the best prices.</p>
                    <p>&copy; 2024 Ecommerce. All rights reserved.</p>
                </div>

                <!-- Quick Links -->
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase">Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-white">Home</a></li>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy" class="text-white">Privacy Policy</a></li>
                        <li><a href="/about" class="text-white">About Us</a></li>
                        <li><a href="/contact" class="text-white">Contact Us</a></li>
                    </ul>
                </div>

                <!-- Social Media Links -->
                <div class="col-md-4 mb-4">
                    <h5 class="text-uppercase">Follow Us</h5>
                    <a href="https://www.facebook.com" target="_blank" class="text-white me-2">
                        <i class="fab fa-facebook fa-lg"></i>
                    </a>
                    <a href="https://www.twitter.com" target="_blank" class="text-white me-2">
                        <i class="fab fa-twitter fa-lg"></i>
                    </a>
                    <a href="https://www.instagram.com" target="_blank" class="text-white me-2">
                        <i class="fab fa-instagram fa-lg"></i>
                    </a>
                    <a href="https://www.linkedin.com" target="_blank" class="text-white">
                        <i class="fab fa-linkedin fa-lg"></i>
                    </a>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    <ejs-scripts></ejs-scripts>
</body>
</html>
