@model IEnumerable<Ecommerce.Application.ViewModels.WishList.WishListViewModel>

@{
    ViewData["Title"] = "Favourites";
}

<div class="row">
    @foreach (var product in ViewBag.Products)
    {
        <div class="col-4">
            <div class="card mb-4">
                <a asp-controller="WishList" asp-action="Index" asp-route-id="2">
                    @if (product.ImageUrl != null)
                    {
                        var imageBase64 = Convert.ToBase64String(product.ImageUrl);
                        var imageSrc = $"data:image/gif;base64,{imageBase64}";
                        <img src="@imageSrc" alt="Image" class="img-thumbnail card-img-top" />
                    }
                    <div class="d-flex justify-content-between card-header">
                        <label style="font-size: 23px;color: steelblue">@product.Name</label>
                        <input type="checkbox" id="favorite-@product.Id" class="favorite-checkbox">
                        <label for="favorite-@product.Id" class="heart-icon">&#x2665;</label>
                    </div>
                    <div class="d-flex justify-content-between card-header">
                        <label style="font-size: 20px;color: #a51313"><b>Price : @product.Price</b></label>
                        <button class="btn-cart" asp-conroller="OrderItem" asp-action="Create" asp-for="@product.Id"><i class="fa-solid fa-cart-arrow-down"></i></button>
                    </div>  
                </a>
            </div>
        </div>
    }
</div> 
